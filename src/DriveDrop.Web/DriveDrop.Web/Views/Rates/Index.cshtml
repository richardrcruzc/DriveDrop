@model IEnumerable<DriveDrop.Web.ViewModels.RateModel>

@{
    ViewData["Title"] = "Index";

    var option = new DriveDrop.Web.ViewModels.TwoParameterModel { Id = 1, Option = "rates" };
}

<section class="sender-desh">
    <div class="container">
        <div class="main-cont">
            <div class="row">

                @await Html.PartialAsync("AdminNavigation", option)

                <div id="content" class="col-sm-9">
                    <div id="gig-information" class="sender-form">
                        <h3 class="blue-head active">Rates</h3>
                        <div class="form-body">
                            <div class="profile-form">
                                <div class="side-2">
                                    <div class="page-body">

                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Package Size</th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                               
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {

                                                    <tr>
                                                        <td>

                                                            <h5 class="title">@item.PackageSize.Name</h5>
                                                        </td>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.Id"><h5 class="title">Details</h5></a>
                                                        </td>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.Id"><h5 class="title">Edit</h5></a>
                                                        </td>
                                                        
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>


                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
 