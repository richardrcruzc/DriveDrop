@model IEnumerable<DriveDrop.Web.ViewModels.RateModel>

@{
    ViewData["Title"] = "Index";
}


<div class="side-2">


    @await Html.PartialAsync("AdminNavigation",1)


</div>
<div class="center-2">
    <div class="page account-page address-list-page">
        <div class="page-title">
            <h1>Rates</h1>
        </div>
        <div class="page-body">
             
            <div class="address-list">
                @foreach (var item in Model)
                {

                    <ol class="opc">
                        <li   class="tab-section allow active">
                            <div class="step-title"><h4 class="title">@item.PackageSize.Name</h4>
                                <a asp-action="Edit" asp-route-id="@item.Id"><h4 class="title">Details</h4></a> 
                                <a asp-action="Edit" asp-route-id="@item.Id"><h4 class="title">Edit</h4></a> 
                                
                            </div>
                        </li>                         
                    </ol>                     
                        }
</div>

               
            </div>
    </div>
</div>

 

