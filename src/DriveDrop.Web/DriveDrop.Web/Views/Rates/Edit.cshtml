@model DriveDrop.Web.ViewModels.RateModel

@{
    ViewData["Title"] = "Edit";
}

 

 <div class="side-2">


    @await Html.PartialAsync("AdminNavigation", 1)


</div> 
<div class="center-2">
    <div class="page account-page customer-info-page">
        <div class="page-title">
            <h1>Edit Rate</h1>
        </div>
        <div class="page-body">
            <div class="page-title">
                <h1>Size:<strong> @Model.PackageSize.Name</strong></h1>
            </div>
            <form asp-action="Edit">

                 

                <div class="fieldset">
                    <div class="form-fields">  

                      

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PackageSize" />
                          

                            <div class="inputs">
                 

                              



                                    <label asp-for="OverHead" class="control-label">Over head per shipping</label>
                                    <input asp-for="OverHead" class="form-control" placeholder="OverHead" />
                                    <span asp-validation-for="OverHead" class="text-danger"></span>
                               

                            </div>

                        <div id="priority"  >
                            <h3> Charge per priority</h3>
                            <br />

                            <div class="row">
                                <div class="col-md-3"><label class="control-label">Drescription</label></div>
                                <div class="col-md-2"><label class="control-label">Charge</label></div>
                                 
                            </div>
                           
                            <div class="row">
                            
                               @Html.EditorFor(m => m.RatePriorities) 
                            </div>
                            
                        </div>
                             
                                <div class="buttons">
                                    <input type="submit" value="Save" class="button-1 save-customer-info-button" />

                                
                            </div>
                        </div> 
                        
                    
                </div>

                 
            </form>
            </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}


