@model  DriveDrop.Web.ViewModels.TaxModel

@{
    ViewData["Title"] = "Edit Tax";
    var option = new DriveDrop.Web.ViewModels.TwoParameterModel { Id = 1, Option = "ListTaxes" };
}


<section class="sender-desh">
    <div class="container">
        <div class="main-cont">
            <div class="row">

                @await Html.PartialAsync("AdminNavigation", option)
           
                    <div id="content" class="col-sm-9">
                        <div id="gig-information" class="sender-form">
                            <h3 class="blue-head active">Edit Tax Rate</h3>
                            <div class="form-body">
                                <div class="profile-form">
                                    <div class="row">

                                        <div class="page-body">

                                            <form asp-action="EditTax">
                                                @Html.AntiForgeryToken()

                                                <div class="fieldset">

                                                    <div class="form-fields">


                                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                        <input type="hidden" asp-for="Id" />

                                                        <div class="inputs">

                                                            <label for="State" class="pull-left">State</label>
                                                            <input asp-for="State" placeholder="State" />


                                                            <span asp-validation-for="State" class="text-danger"></span>


                                                        </div>
                                                        <div class="inputs">

                                                            <label for="County" class="pull-left">County</label>
                                                            <input asp-for="County" placeholder="County" />


                                                            <span asp-validation-for="County" class="text-danger"></span>


                                                        </div>

                                                        <div class="inputs">

                                                            <label for="City" class="pull-left">City</label>
                                                            <input asp-for="City" placeholder="City" />


                                                            <span asp-validation-for="City" class="text-danger"></span>


                                                        </div>
                                                        <div class="inputs">

                                                            <label for="Rate" class="pull-left">Rate</label>

                                                            <input asp-for="Rate" placeholder="Rate" />

                                                            <span class="required">*</span>

                                                            <span asp-validation-for="Rate" class="text-danger"></span>


                                                        </div>
                                                        <div class="inputs">

                                                            <label for="RateDefault" class="pull-left">Default</label>

                                                            <input asp-for="RateDefault" placeholder="RateDefault" />


                                                            <span asp-validation-for="RateDefault" class="text-danger"></span>


                                                        </div>

                                                        <div class="buttons">
                                                            <input type="submit" value="Save" class="button-1 save-customer-info-button" />


                                                        </div>
                                                    </div>
                                                </div>



                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
