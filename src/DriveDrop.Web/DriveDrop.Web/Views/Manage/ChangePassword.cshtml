@model DriveDrop.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    var option = new DriveDrop.Web.ViewModels.TwoParameterModel { Id = Model.Id, Option = "ChangePassword" };
}

<section class="sender-desh">
    <div class="container">
        <div class="main-cont">
            <div class="row">
                @if (Model.IsAdmin == true)
                {
                    @await Html.PartialAsync("AdminNavigation", option)
                }
                else
                {
                    @if (Model.IsDriver == true)
                    {
                        @await Html.PartialAsync("DriverNavigation", option)
                    }
                    else
                    {
                        @await Html.PartialAsync("CustomerNavigation", option)
                    }
                }
                  
                 <div id="content" class="col-sm-9">
                    <div id="gig-information" class="sender-form">
                        <h3 class="blue-head active">Change Password</h3>
                        <div class="login-page ">
                            
                                    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                                        <div class="login-form">
                                                  <div class="form-field">
                                                    @*<label asp-for="OldPassword" class="col-md-2 control-label"></label>*@

                                                    @Html.TextBoxFor(m => m.OldPassword, new { @placeholder = "Current Password", @class = "form-control" })
                                                    <span asp-validation-for="OldPassword" class="text-danger"></span>

                                                </div>
                                                <div class="form-field">

                                                    @Html.TextBoxFor(m => m.NewPassword, new { @placeholder = "New Password", @class = "form-control" })
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                                                </div>
                                                <div class="form-field">

                                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "Confirm New Password", @class = "form-control" })
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                                </div>
                                               

                                            <input type="submit" value="Change Password" name="save-info-button" class="login-bttn" style="width:200px" />
                                            <div class="clearfix"></div>
                                       </div>
                                            @*<div class="form-fields">
                <div class="buttons">

                    <button type="submit" class="bttn">Change Password</button>

                </div>

            </div>*@


</form>
                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section> 
                                    @section Scripts {
                                        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                                    }
