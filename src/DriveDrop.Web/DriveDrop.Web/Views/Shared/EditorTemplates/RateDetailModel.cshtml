@using DriveDrop.Web.ViewModels;
@model  RateDetailModel

<tr>
    @if (Model.WeightOrDistance =="")
    {

        <td>

            <select asp-for="WeightOrDistance" class = "form-control text-box single-line">
                <option value="">Please select Type</option>
                <option value="distance">Distance</option>
                <option value="weight">Weight</option>
            </select>
 
            @Html.ValidationMessageFor(modelItem => modelItem.To, "", new { @class = "text-danger" })

        </td>

    }
    <td>
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.RateId)
        @Html.HiddenFor(model => model.MileOrLbs)
        @Html.HiddenFor(model => model.WeightOrDistance)
        @Html.TextBoxFor(model => model.From, htmlAttributes: new { @class = "form-control text-box single-line" })
        @Html.ValidationMessageFor(modelItem => modelItem.From, "", new { @class = "text-danger" })
    </td>
    <td>
        @Html.TextBoxFor(model => model.To, htmlAttributes: new { @class = "form-control text-box single-line" })
        @Html.ValidationMessageFor(modelItem => modelItem.To, "", new { @class = "text-danger" })

    </td>
    

    <td>
        @Html.TextBoxFor(model => model.Charge, htmlAttributes: new { @class = "form-control text-box single-line" })
        @Html.ValidationMessageFor(modelItem => modelItem.Charge, "", new { @class = "text-danger" })

    </td>
</tr>