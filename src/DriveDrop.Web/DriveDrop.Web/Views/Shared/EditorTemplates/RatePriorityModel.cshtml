@using DriveDrop.Web.ViewModels;
@model  RatePriorityModel
<div class="row">
    
    <div class="col-md-3"> 
        @Html.DropDownListFor(m => m.PriorityId, new SelectList(ViewBag.PriorityTypeList, "Value", "Text"), new { @class = "form-control" })




        @Html.ValidationMessageFor(modelItem => modelItem.PriorityId, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2">
         
        @Html.HiddenFor(model => model.RateId) 
        @Html.TextBoxFor(model => model.Charge, htmlAttributes: new { @class = "form-control text-box single-line" })
        @Html.ValidationMessageFor(modelItem => modelItem.Charge, "", new { @class = "text-danger" })
        
    </div>
    <div class="col-md-2">
        @Html.CheckBoxFor(model => model.ChargePercentage, htmlAttributes: new { @class = "form-control text-box single-line" })
        @Html.ValidationMessageFor(modelItem => modelItem.ChargePercentage, "", new { @class = "text-danger" })

    </div>
   
    <div class="col-md-2">
         
        <a href="@Url.Action("Delete","rates", new {id=Model.Id , rateId  =  Model.RateId, type = 3})"  >Delete</a>
        @*<input type="submit" class="button delete-address-button" onclick="deletecustomeraddress(@(Model.Id))" value="Delete" />*@
    </div>
</div>
