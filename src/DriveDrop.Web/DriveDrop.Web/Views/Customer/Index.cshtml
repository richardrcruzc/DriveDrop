@{
    ViewData["Title"] = "Catalog";
    @model DriveDrop.Web.ViewModels.CustomerIndex
}
 

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Serch by </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <form asp-action="Index" asp-controller="Customer" method="post" class="navbar-form navbar-left">

               
                        <div class="navbar-brand" href="#"><select asp-for="@Model.TypeFilterApplied" asp-items="@Model.CustomerType" class="dropdown"></select> </div>
                        <div class="navbar-brand" href="#"><select asp-for="@Model.StatusFilterApplied" asp-items="@Model.CustomerStatus" class="dropdown"></select> </div>
                        <div class="navbar-brand" href="#"><select asp-for="@Model.TransportFilterApplied" asp-items="@Model.TransportType" class="dropdown"></select> </div>

                        <div class="form-group" href="#"><input asp-for="LastName" class="form-control" placeholder="Last Name" /> </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    
            </form>
</div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>




 

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h3> Senders / Drivers List</h3>

        </div>


    </div>

    <p>
        <a asp-action="Create" class="btn btn-default">Create New</a>
    </p>
    

    @if (Model.CustomerList.Any())
    {



        @Html.Partial("_pagination", Model.PaginationInfo)


        <table class="table">
            <thead>
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Transport 
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>


                @foreach (var customer in Model.CustomerList)
                {
                    <tr>
 
                        @Html.Partial("_customer", customer)
                    </tr>
                }

                <tr>
                    <td colspan="5">
                         @Html.Partial("_pagination", Model.PaginationInfo)
                    </td>
                </tr>
            </tbody>
        </table>
    }
    else
    {

        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
         

    }

</div>

