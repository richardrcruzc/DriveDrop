@model DriveDrop.Web.ViewModels.AddressModel

<input asp-for="Id" hidden />


    <div class="side-2">



        @await Html.PartialAsync("CustomerNavigation",(int)@ViewBag.Id)


    </div>
    <div class="center-2">

        @using (Html.BeginForm("AddressAdd", "Sender",FormMethod.Post))
{
            @Html.AntiForgeryToken()
            <div class="page account-page address-edit-page">
                <div class="page-title">
                    <h1> MyAccount - Addresses AddNew</h1>
                </div>
                <div class="page-body">
                    
                        <div class="edit-address">
                            <div class="inputs"> 

                                <input asp-for="Street" class="form-control" placeholder="Street" />
                                <span class="required">*</span>

                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                            <div class="inputs">
                                <input asp-for="Street" class="form-control" placeholder="Street" />
                                <span class="required">*</span>
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                            <div class="inputs">
                                <input asp-for="City" class="form-control" placeholder="City" />
                                <span class="required">*</span>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                           
                            <div class="inputs">
                                <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" />
                                <span class="required">*</span>
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                             
                            <div class="inputs">
                                <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                <span class="required">*</span>
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                            <div class="inputs">
                                <input asp-for="Contact" class="form-control" placeholder="Contact" />
                                <span class="required">*</span>
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                        </div>
                     
                                <div class="buttons">
                                    <input type="submit" class="button-1 save-address-button" value="Save" />
                                </div>
                            </div>
                        </div>
                        }
                    </div>
