@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model DriveDrop.Bl.ViewModels.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@*@inject SignInManager<ApplicationUser> SignInManager*@

@{
    ViewData["Title"] = "Log in";
 
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

    <section class="login-page">
        <div class="container">
            <div class="headline width-40">
                <h3>LOG IN</h3>
            </div>
            <div class="login-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-field ">

                    @Html.TextBoxFor(m => m.Email, new { @class = "email", autofocus = "autofocus", placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-field">
                    @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password)

                </div>
                
                <button type="submit" class="login-bttn">Login into Your Account</button>
               
                <div class="clearfix"></div>
               

            </div>

        </div>
    </section>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

