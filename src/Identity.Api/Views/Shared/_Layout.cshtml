<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Drivedrop</title>

    <!-- Bootstrap -->

    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800" rel="stylesheet">

   </head>
<body>
    <div class="page-row">
        <header class="blue-bg">
            <div class="container">
                <div class="row descktop-menu">
                    <div class="col-xs-2">
                        <a href="@ViewData["ReturnHomeUrl"]"><img src="~/images/logo.png"></a>
                    </div>
                    <div class="col-xs-8 pull-right ">
                        <nav>
                            <ul class="main-menu">

                                <li>
                                    <a href="@ViewData["ReturnHomeUrl"]/sender/NewSender" class="ico-register">Senders </i></a>

                                </li>
                                <li>
                                    <a href="@ViewData["ReturnHomeUrl"]/Driver/NewDriver" class="ico-register">Drivers  </i></a>
                                </li>
                                <div class="clearfix"></div>
                            </ul>


                        </nav>
                    </div>
                </div>
                <div class="mobile-menu">
                    <span style="font-size:30px;cursor:pointer" onclick="openNav()"> <img src="~/images/mobile-nav.png"></span>
                    <a href="@ViewData["ReturnHomeUrl"]"><img src="~/images/logo.png"></a>
                </div>

            </div>
        </header>
    </div>
    <main class="page-row page-row-expanded">



        @RenderBody()


    </main>


    <footer>
        <div class="container">
            <div class="row">


                <div class="col-xs-12 col-sm-3 footer-logo">
                    <figure>
                        <img src="~/images/logo.png">
                    </figure>

                </div>
                <div class="col-xs-12 col-sm-6">
                    <ul class="footer-menu">
                        <li><a href="#">Help</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Testimonials</a></li>
                        <li><a href="#">About us</a></li>
                        <li><a href="#">Press</a></li>
                        <li><a href="#">Carrier</a></li>
                        <li><a href="#">Contact us</a></li>

                    </ul>
                </div>

                <div class="col-xs-12 col-sm-3">
                    <ul class="social-media">
                        <li><a href="#" class="fa fa-facebook"></a> </li>
                        <li><a href="#" class="fa fa-google-plus"></a> </li>
                        <li><a href="#" class="fa fa-twitter"></a> </li>

                    </ul>
                </div>
            </div>


        </div>
    </footer>

    <div class="row">
        <div class="copy-right">

            <p>Copyright 2017 | ALL RIGHTS RESERVED</p>

        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/sticky-sidebar.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }

    </script>

    <script src="@(Url.Content("~/lib/Inputmask/dist/jquery.inputmask.bundle.js"))"></script>
    <script src="@(Url.Content("~/lib/Inputmask/dist/inputmask/phone-codes/phone.js"))"></script>
    <script src="@(Url.Content("~/lib/Inputmask/dist/inputmask/phone-codes/phone-be.js"))"></script>
    <script src="@(Url.Content("~/lib/Inputmask/dist/inputmask/phone-codes/phone-ru.js"))"></script>

    @RenderSection("scripts", required: false)


</body>
</html>
 









